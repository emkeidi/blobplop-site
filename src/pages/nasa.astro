---
import { APODList } from '../components/APOD/APODList';
import SpaceLayout from '../layouts/SpaceLayout.astro';
---

<SpaceLayout>
  <main>
    <section class='intro'>
      <h1>Blob: <span class='text-gradient'>Star Gazers</span></h1>
      <p>APOD stands for Astronomy Picture of the Day.</p>
    </section>
    <section class='images'>
      <APODList client:load />
    </section>
  </main>
</SpaceLayout>

<style>
  .images {
    max-width: 90%;
    margin: 0 auto;
  }

  .intro {
    text-align: center;
    margin: 0 auto;
    color: azure;
    margin-bottom: 3rem;
  }
</style>
