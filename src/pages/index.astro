---
import Layout from '../layouts/Layout.astro';
import ListCard from '../components/ListCard.astro';
import blobSVG from '../icons/blob.svg';
import { Image } from 'astro:assets';
import RandomTagline from '../components/RandomTagline';
---

<Layout>
	<main class='prose lg:prose-xl'>
		<div class='container mx-auto max-w-md mb-4'>
			<div class='flex justify-center'>
				<Image src={blobSVG} alt='blob' height='300' />
			</div>
		</div>
        <RandomTagline client:load />

		<ul role='list' class='link-card-grid'>
			<ListCard href='/blobs/' title='Blobs ðŸ“–' body='A blog about learning and random topics.' />
			<ListCard
				href='/nasa/'
				title='Nasa API ðŸ”­ðŸŒš'
				body='Astronomy Picture of the Day selections.'
			/>
			<ListCard
				href='https://ratracerealty.vercel.app'
				title='Rat Race Realty ðŸ§€ðŸ€'
				body='Under construction. A game about real estate and rats.'
                disabled={true}
			/>
			<ListCard href='/about/' title='About' body='Who makes these blobs?' />
		</ul>
	</main>

	<style>
		main {
			margin: auto;
			padding: 1.5rem;
		}
		h1 {
			font-size: 3rem;
			font-weight: 800;
			margin: 0;
			text-align: center;
		}
		.text-gradient {
			background-image: var(--accent-gradient);
			-webkit-background-clip: text;
			-webkit-text-fill-color: transparent;
			background-size: 400%;
			background-position: 0%;
		}
		.instructions {
			line-height: 1.6;
			margin: 1rem 0;
			border: 1px solid rgba(var(--accent), 25%);
			padding: 1rem;
			border-radius: 0.4rem;
			text-align: center;
		}
		.instructions code {
			font-size: 0.875em;
			font-weight: bold;
			background: rgba(var(--accent), 12%);
			color: rgb(var(--accent));
			border-radius: 4px;
			padding: 0.3em 0.45em;
		}
		.instructions strong {
			color: rgb(var(--accent));
		}
		.link-card-grid {
			display: grid;
			grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
			gap: 1rem;
			padding: 0;
		}
	</style>
</Layout>
