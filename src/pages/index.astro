---
import Layout from '../layouts/Layout.astro';
import ListCard from '../components/ListCard.astro';
import blobSVG from '../icons/blob.svg';
import { Image } from 'astro:assets';
---

<Layout>
	<main class='prose lg:prose-xl'>
		<div class='container mx-auto max-w-md mb-4'>
			<div class='flex justify-center'>
				<Image src={blobSVG} alt='blob' height='300' />
			</div>
		</div>
		<h1>All roads lead to <span class='text-gradient'>Blob</span></h1>
		<div class='container mx-auto'>
			<div class='flex justify-center'><p>Themes:</p></div>
			<div class='grid sm:grid-cols-2 md:grid-cols-4 gap-4'>
				<div class='mx-auto'>
					<button
						class='btn btn-primary btn-sm'
						data-set-theme='blobby'
						data-act-class='ACTIVECLASS'>ğŸ«  Blobby</button
					>
				</div>
				<div class='mx-auto'>
					<button
						class='btn btn-secondary btn-sm'
						data-set-theme='fantasy'
						data-act-class='ACTIVECLASS'
					>
						ğŸ§â€â™€ï¸ Fantasy</button
					>
				</div>
				<div class='mx-auto'>
					<button class='btn btn-accent btn-sm' data-set-theme='coffee' data-act-class='ACTIVECLASS'
						>â˜• Coffee</button
					>
				</div>
				<div class='mx-auto'>
					<button class='btn btn-success btn-sm' data-set-theme='retro' data-act-class='ACTIVECLASS'
						>ğŸ’¾ Retro</button
					>
				</div>
			</div>
		</div>
		<ul role='list' class='link-card-grid'>
			<ListCard href='/blobs/' title='Blobs ğŸ“–' body='A blog about learning and random topics.' />
			<ListCard
				href='/nasa/'
				title='Nasa API ğŸ”­ğŸŒš'
				body='Astronomy Picture of the Day selections.'
			/>
			<ListCard
				href='https://ratracerealty.vercel.app'
				title='Rat Race Realty ğŸ§€ğŸ€'
				body='Save up some cheese to snag a lair.'
			/>
			<ListCard href='/about/' title='About' body='Who makes these blobs?' />
		</ul>
	</main>

	<style>
		main {
			margin: auto;
			padding: 1.5rem;
		}
		h1 {
			font-size: 3rem;
			font-weight: 800;
			margin: 0;
			text-align: center;
		}
		.text-gradient {
			background-image: var(--accent-gradient);
			-webkit-background-clip: text;
			-webkit-text-fill-color: transparent;
			background-size: 400%;
			background-position: 0%;
		}
		.instructions {
			line-height: 1.6;
			margin: 1rem 0;
			border: 1px solid rgba(var(--accent), 25%);
			padding: 1rem;
			border-radius: 0.4rem;
			text-align: center;
		}
		.instructions code {
			font-size: 0.875em;
			font-weight: bold;
			background: rgba(var(--accent), 12%);
			color: rgb(var(--accent));
			border-radius: 4px;
			padding: 0.3em 0.45em;
		}
		.instructions strong {
			color: rgb(var(--accent));
		}
		.link-card-grid {
			display: grid;
			grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
			gap: 1rem;
			padding: 0;
		}
	</style>
</Layout>
