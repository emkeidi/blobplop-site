---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

interface Props {
	title?: string | number;
}

const { title = 'BlobPlop' } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang='en'>
	<head>
		<meta charset='UTF-8' />
		<meta name='viewport' content='width=device-width' />
		<link rel='icon' type='image/x-icon' href='/alien.png' />
		<meta name='generator' content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Header />
		<main>
			<slot />
		</main>
		<Footer />
	</body>
</html>

<style>
	/* TODO move some of this to the specific pages, it seems Layouts
	are not the best spot for all CSS things */
	:root {
		--font-size-base: clamp(1rem, 0.34vw + 0.91rem, 1.19rem);
		--font-size-lg: clamp(1.2rem, 0.7vw + 1.2rem, 1.5rem);
		--font-size-xl: clamp(2.44rem, 2.38vw + 1.85rem, 3.75rem);
		--color-text: #f4e7ff;
		--color-text-secondary: #c3b6fe;
		--grey-1: #0f172a;
		--grey-2: #1d293b;
		--grey-3: #344155;
		--box-shadow-glow: #6a21a7 0 1px 5px;
		--space-gradient: linear-gradient(#0f172a 70%, #240240);
	}

	html {
		font-family: system-ui, sans-serif;
		font-size: var(--font-size-base);
		color: var(--color-text);
		background-size: 100% max(100vh, 100%);
		overflow-x: auto;
		overflow-y: auto;
	}

	main {
		margin: 0;
		background: url('https://astro.build/stars.png'), var(--space-gradient);
		height: 100%;
		min-height: 100vh;
	}

	a,
	a:visited {
		color: var(--color-text-secondary);
		text-decoration: none;
		transition: background-color 0.2s;
		border-radius: 0.2rem;
	}
	a:hover,
	a:focus-visible {
		background-color: var(--grey-2);
	}

	p {
		line-height: 1.6rem;
	}
</style>
